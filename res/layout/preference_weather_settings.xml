<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true"
    android:padding="4dp"
    app:cardCornerRadius="12dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_settings_weather"
            android:background="@*android:color/accent_device_default_light"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:paddingTop="8dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/weather_title"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@*android:color/about_text_color_primary"/>

        <TextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:paddingBottom="8dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/weather_title_summary"
            android:textSize="14dp"
            android:textColor="@*android:color/about_text_color_secondary"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>